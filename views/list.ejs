<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <form action="?delete=true" method="post">
      <% newListItems.forEach(function(listItem) { %>
        <div class="item">
          <input type="checkbox" name="deleteItem" value="<%=  listItem._id  %>" onchange="this.form.submit()">
          <p><%=  listItem.name  %></p>
        </div>
      <% }); %>
    </form>

    <form class="item" action="" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list">+</button>
    </form>
  </div>

<%- include("footer") -%>
